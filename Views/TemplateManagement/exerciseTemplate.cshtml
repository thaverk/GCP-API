@using PhasePlayWeb.Data;
@model PhasePlayWeb.Models.TemplateManagementVM

@inject ApplicationDbContext dBContext

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/stylesheetphaseplay.css" rel="stylesheet" />
    <link href="https://cdn.syncfusion.com/ej2/20.2.36/material.css" rel="stylesheet">
    <script src="https://cdn.syncfusion.com/ej2/20.2.36/dist/ej2.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>
    <script>
        // Use event delegation to handle the click event on dynamically added elements
            $(document).on('click', '[data-toggle="modal"][data-target="#editExerciseModal"]', function (event) {
                var button = $(this); // Button that triggered the modal
                var id = button.data('id');
                var name = button.data('name');

                // Update the modal's input fields
                var modal = $('#editExerciseModal');
                modal.find('#editExerciseId').val(id);
                modal.find('#editExerciseName').val(name);
            });

            // Use event delegation for delete button
            $(document).on('click', '[data-toggle="modal"][data-target="#deleteExerciseModal"]', function (event) {
                var button = $(this); // Button that triggered the modal
                var id = button.data('id');
                var name = button.data('name');

                // Update the modal's input fields
                var modal = $('#deleteExerciseModal');
                modal.find('#deleteExerciseId').val(id);
                modal.find('#deleteExerciseName').text(name);
            });


            // Delete exercise function to work with DataTables
            $(document).on('click', '.btn-delete-exercise', function (e) {
                e.preventDefault();
                var exerciseId = $(this).data('id');
                var table = $('#datatables1').DataTable();
                var row = table.row($(this).closest('tr'));

                if (confirm('Are you sure you want to delete this exercise?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteExercise", "Exercise")',
                        type: 'POST',
                        data: { id: exerciseId },
                        success: function (result) {
                            if (result.success) {
                                // Remove the row from the DataTable
                                row.remove().draw();
                            } else {
                                alert('Error deleting exercise.');
                            }
                        },
                        error: function () {
                            alert('Error deleting exercise.');
                        }
                    });
                }
            });


    </script>
</head>
<body>
    <div>
        <div>
            <div class="col-md-12 mx-auto" style="margin-top:20px;">
                <div class="d-flex" style="padding:20px; margin-left:10px">
                    <!-- Button to open the add exercise modal -->
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addExerciseModal">
                        Add Exercise
                    </button>
                    <button type="button" class="btn btn-info" onclick="location.href='@Url.Action("UploadExerciseList", "Exercise")'" style="margin-left:10px; font:white;">
                        Upload File
                    </button>
                    <!-- Add exercise modal -->
                    <div class="modal fade" id="addExerciseModal" tabindex="-1" role="dialog" aria-labelledby="addExerciseModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="addExerciseModalLabel">Add Exercise</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body" style="padding:20px;">
                                    <form asp-action="AddExercise" asp-controller="Exercise" method="post">
                                        <div class="form-group">
                                            <label for="name">Exercise Name</label>
                                            <input type="text" class="form-control" id="name" name="name" required />
                                        </div>
                                        <div class="form-group">
                                            <label for="url">Add Exercise URL</label>
                                            <input type="text" class="form-control" id="url" name="youtubeURL" />
                                        </div>
                                        <div class="form-group col-10 d-flex">
                                            <div>
                                                <label for="bodyPart">Body Part</label>
                                                <select id="bodyPart" class="form-control" name="bodyPart">
                                                    <option>Select Body Part</option>
                                                    <option value="Upper Body">Upper Body</option>
                                                    <option value="Lower Body">Lower Body</option>
                                                    <option value="Core">Core</option>
                                                </select>
                                            </div>
                                            &nbsp;&nbsp;&nbsp;&nbsp;
                                            <div>
                                                <label for="catergory">Category</label>
                                                <select id="catergory" class="form-control" name="category">
                                                    <option>Select Category</option>
                                                    <option value="Strength">Strength</option>
                                                    <option value="Educational">Educational</option>
                                                    <option value="SAQ">SAQ</option>
                                                    <option value="Mobility">Mobility</option>
                                                    <option value="Conditioning">Conditioning</option>
                                                    <option value="Power">Power</option>
                                                    <option value="Warm up">Warm up</option>
                                                    <option value="Cardio">Cardio</option>
                                                    <option value="Pillar">Pillar</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group col-10 d-flex">
                                            <div>
                                                <label for="primaryGroup">Primary Muscle Group</label>
                                                <select id="primaryGroup" class="form-control" name="primaryGroup">
                                                    <option>Select Primary Muscle Group</option>
                                                    <option value="Quadriceps">Quadriceps</option>
                                                    <option value="Upper Back">Upper Back</option>
                                                    <option value="Chest">Chest</option>
                                                    <option value="Glutes">Glutes</option>
                                                    <option value="Lats">Lats</option>
                                                    <option value="Abdominals">Abdominals</option>
                                                    <option value="Calves">Calves</option>
                                                    <option value="Biceps">Biceps</option>
                                                    <option value="Abductors">Abductors</option>
                                                    <option value="Adductors">Adductors</option>
                                                    <option value="Forearms">Forearms</option>
                                                    <option value="Traps">Traps</option>
                                                    <option value="Neck">Neck</option>
                                                    <option value="Full Body">Full Body</option>
                                                    <option value="Cardio">Cardio</option>
                                                    <option value="Shoulders">Shoulders</option>
                                                    <option value="Hip Flexors">Hip Flexors</option>
                                                    <option value="Foot">Foot</option>
                                                    <option value="Core">Core</option>
                                                    <option value="Other">Other</option>
                                                </select>
                                            </div>

                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            <div>
                                                <label for="secondaryGroup1">Secondary Muscle Group</label>
                                                <select id="secondaryGroup1" class="form-control" name="secondaryGroup1">
                                                    <option>Select Secondary Muscle Group</option>
                                                    <option value="Quadriceps">Quadriceps</option>
                                                    <option value="Upper Back">Upper Back</option>
                                                    <option value="Chest">Chest</option>
                                                    <option value="Glutes">Glutes</option>
                                                    <option value="Lats">Lats</option>
                                                    <option value="Abdominals">Abdominals</option>
                                                    <option value="Calves">Calves</option>
                                                    <option value="Biceps">Biceps</option>
                                                    <option value="Abductors">Abductors</option>
                                                    <option value="Adductors">Adductors</option>
                                                    <option value="Forearms">Forearms</option>
                                                    <option value="Traps">Traps</option>
                                                    <option value="Neck">Neck</option>
                                                    <option value="Full Body">Full Body</option>
                                                    <option value="Cardio">Cardio</option>
                                                    <option value="Shoulders">Shoulders</option>
                                                    <option value="Hip Flexors">Hip Flexors</option>
                                                    <option value="Foot">Foot</option>
                                                    <option value="Core">Core</option>
                                                    <option value="Other">Other</option>
                                                </select>
                                            </div>
                                        </div>
                                        <br />
                                        <button type="submit" class="btn btn-primary">Add</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>



                </div>





                @if (Model != null && Model.Exercises.Any())
                {
                    <div style="height: 500px; overflow: auto; padding:10px;">
                        <table class="display table border-0" id="datatables1" style="padding-bottom:10px; width:100%">
                            <thead class="thead-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Body Part</th>
                                    <th>Category</th>
                                    <th>Primary Group</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var excercises in Model.Exercises)
                                {
                                    <tr>
                                        <td>@excercises.Name</td>
                                        <td>@excercises.BodyPart</td>
                                        <td>@excercises.Category</td>
                                        <td>@excercises.PrimaryGroup</td>
                                        <td>
                                            <div class="d-flex">
                                                <!--Edit Button-->
                                                <button type="button" class="btn" data-toggle="modal" data-target="#editExerciseModal"
                                                        data-id="@excercises.Id" data-name="@excercises.Name" >
                                                    <i class="fas fa-pen" aria-hidden="true"></i>
                                                </button>
                                                &nbsp;&nbsp;
                                                <!--Delete Button-->
                                                <button type="button" class="btn btn-delete-exercise" data-id="@excercises.Id" style="margin-left: 5px;">
                                                    <i class="fas fa-trash" aria-hidden="true"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>


                    </div>

                }
                else
                {
                    <p>No data available. Please add exercises</p>
                }

            </div>
        </div>
        </div>

    <script>
        $(document).ready(function() {
            $('#datatables1').DataTable({
                responsive: true,
                lengthMenu: [10, 25, 50, 100],
                pageLength: 25,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search exercises...",
                    lengthMenu: "Show _MENU_ exercises",
                    info: "Showing _START_ to _END_ of _TOTAL_ exercises"
                },
                columnDefs: [
                    { orderable: true, targets: 0 },
                    { orderable: false, targets: 1 } // Disable sorting on actions column
                ]
            });
        });

        // Refresh DataTable after adding a new exercise
        $('#addExerciseModal form').on('submit', function() {
            $(this).on('ajax:success', function() {
                location.reload(); // Reload the page to show the new exercise
            });
        });
    </script>

</body>
</html>
