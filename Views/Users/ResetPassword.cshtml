@{
    Layout = null;
}

@model PhasePlayWeb.Models.ResetPasswordViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.3/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <style>
        .valid {
            color: green;
        }

        .invalid {
            color: red;
        }

        body {
            background-color: #f8f9fa;
        }

        .reset-password-form {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .form-floating {
            margin-bottom: 1rem;
        }

        .btn-reset {
            width: 100%;
        }

        .json-response {
            margin-top: 20px;
            padding: 15px;
            background-color: #e9ecef;
            border-radius: 5px;
            font-family: monospace;
            white-space: pre-wrap;
            word-break: break-all;
        }

        .d-none {
            display: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="reset-password-form">
            <h2 class="text-center mb-4">Reset Password</h2>
            <form id="frmResetPassword" method="post" action="/Users/ResetPassword">
                @Html.AntiForgeryToken()
                <input asp-for="Code" type="hidden" />

                <div class="form-floating">
                    <input asp-for="Email" type="email" class="form-control" id="floatingEmail" placeholder="name@example.com" required>
                    <label for="floatingEmail">Email address</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="NewPassword" type="password" class="form-control" id="newPassword" placeholder="Password" required>
                    <label for="floatingPassword">New Password</label>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div id="passwordRequirements" class="text-danger">
                    <ul>
                        <li id="lengthRequirement" class="invalid">At least 8 characters</li>
                        <li id="uppercaseRequirement" class="invalid">At least one uppercase letter</li>
                        <li id="lowercaseRequirement" class="invalid">At least one lowercase letter</li>
                        <li id="numberRequirement" class="invalid">At least one number</li>
                        <li id="specialCharRequirement" class="invalid">At least one special character (e.g. "!#$%^&*")</li>
                    </ul>
                </div>

                <div class="form-floating">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingConfirmPassword" placeholder="Confirm Password" required>
                    <label for="floatingConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" id="btnResetPassword" class="btn btn-primary btn-reset mt-3">
                    Reset Password
                </button>
            </form>
            <div id="jsonResponse" class="json-response d-none"></div>
        </div>
    </div>
     @{
        string characters = "[!#@$%^&*]";
     }
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
        
    }
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    $(document).ready(function () {
        function validatePassword() {
            var password = $('#newPassword').val();
            var lengthRequirement = password.length >= 8;
            var uppercaseRequirement = /[A-Z]/.test(password);
            var lowercaseRequirement = /[a-z]/.test(password);
            var numberRequirement = /[0-9]/.test(password);
            var specialCharRequirement = /@characters/.test(password);

            $('#lengthRequirement').toggleClass('valid', lengthRequirement).toggleClass('invalid', !lengthRequirement);
            $('#uppercaseRequirement').toggleClass('valid', uppercaseRequirement).toggleClass('invalid', !uppercaseRequirement);
            $('#lowercaseRequirement').toggleClass('valid', lowercaseRequirement).toggleClass('invalid', !lowercaseRequirement);
            $('#numberRequirement').toggleClass('valid', numberRequirement).toggleClass('invalid', !numberRequirement);
            $('#specialCharRequirement').toggleClass('valid', specialCharRequirement).toggleClass('invalid', !specialCharRequirement);

            return lengthRequirement && uppercaseRequirement && lowercaseRequirement && numberRequirement && specialCharRequirement;
        }

        $('#newPassword').on('input', validatePassword);

       
    });
</script>
</body>
</html>
