@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PhasePlay.io</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>

        .valid {
            color: green;
        }

        .invalid {
            color: red;
        }

        .btn {
            background-color: dimgray;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 col-md-6 col-sm-8 col-10 mx-auto auth-container mx-auto">
                        <div class="auth-form-light text-left p-5">
                            <div class="brand-logo">
                                <img class="logo" src="https://phaseplay.io/wp-content/uploads/2020/09/site-logo.svg">
                            </div>
                            <h4>New here?</h4>
                            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                            <form id="SignUpForm" action="/Users/SignUp" method="post" class="pt-3">
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" id="name" placeholder="Name" name="name" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control form-control-lg" id="surname" placeholder="Surname" name="surname" required>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-lg" id="email" placeholder="Email" name="email" required>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control form-control-lg" id="password" placeholder="Password" name="password" required>
                                </div>
                                <div class="card" style="font-size:14px;margin-bottom:20px;padding:10px;">
                                    <div id="passwordRequirements" class="text-danger">
                                        <ul>
                                            <li id="lengthRequirement" class="invalid">At least 8 characters</li>
                                            <li id="uppercaseRequirement" class="invalid">At least one uppercase letter</li>
                                            <li id="lowercaseRequirement" class="invalid">At least one lowercase letter</li>
                                            <li id="numberRequirement" class="invalid">At least one number</li>
                                            <li id="specialCharRequirement" class="invalid">At least one special character (e.g. "!#$%^&*")</li>
                                        </ul>
                                    </div>
                                </div>
                                
                                <div class="mb-4">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input"> I agree to all Terms & Conditions
                                        </label>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-block btn-lg font-weight-medium auth-form-btn" type="submit" id="signUpButton">SIGN UP</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account?<a href="@Url.Action("SignIn", "Users")" class="text-primary" style="color:#cfe2ff">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    
            <!-- Modal -->
            <div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="signUpModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="signUpModalLabel">Create Team</h5>
                        </div>
                        <div class="modal-body">
                            <p>Please create a team before continuing to the Sign-in page.</p>
                            <form id="CreateTeamModal" action="/Users/CreateTeamModal" method="post">
                                <div>
                                    <h6>Enter Team Name</h6>
                                    <input type="text" id="TeamName" name="TeamName" class="form-control" placeholder="Enter Name" required />
                 
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary" form="CreateTeamModal">Create Team</button>
                        </div>
                    </div>
                </div>
            </div>
    

    <div class="modal fade" id="popup-modal" tabindex="-1" role="dialog" aria-labelledby="popup-modal-label" aria-hidden="true">

        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addMemberModalLabel">User Already Exists!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div>
                        <h5>The Email You have Entered Already Exists!</h5>
                        <h6>Please use a different email if it is not you. If it is, Please Sign-in</h6>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("SignUp", "Users")'">Go Back to Sign-Up</button>
                    <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("SignIn", "Users")'">Sign-In</button>
                </div>
            </div>
        </div>
    </div>
    @{
        string characters = "[!#@$%^&*]";
    }
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")

    }
    <script>
        $(document).ready(function () {
            function validatePassword() {

                var password = $('#password').val();
                var lengthRequirement = password.length >= 8;
                var uppercaseRequirement = /[A-Z]/.test(password);
                var lowercaseRequirement = /[a-z]/.test(password);
                var numberRequirement = /[0-9]/.test(password);
                var specialCharRequirement = /@characters/.test(password);


                $('#lengthRequirement').toggleClass('valid', lengthRequirement).toggleClass('invalid', !lengthRequirement);
                $('#uppercaseRequirement').toggleClass('valid', uppercaseRequirement).toggleClass('invalid', !uppercaseRequirement);
                $('#lowercaseRequirement').toggleClass('valid', lowercaseRequirement).toggleClass('invalid', !lowercaseRequirement);
                $('#numberRequirement').toggleClass('valid', numberRequirement).toggleClass('invalid', !numberRequirement);
                $('#specialCharRequirement').toggleClass('valid', specialCharRequirement).toggleClass('invalid', !specialCharRequirement);

                return lengthRequirement && uppercaseRequirement && lowercaseRequirement && numberRequirement && specialCharRequirement;
            }
           
            $('#password').on('input', validatePassword);
            
            $('#SignUpForm').submit(function (event) {
                event.preventDefault(); // Prevent the default form submission
                if (!validatePassword()) {
                    Swal.fire({ title: 'Password does not meet requirements.', icon: 'warning' });
                    return;
                }

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("SignUp", "Users")',
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            $('#popup-modal').modal('show');
                        } else {
                            $('#signUpModal').modal('show');
                            // Handle validation errors or other issues
                           
                        }
                    },
                    error: function () {
                        alert('An error occurred. Please try again.');
                    }
                });
            });
        });
    </script>
</body>
</html>
