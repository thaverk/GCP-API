@{
}
@model Tuple<List<PhasePlayWeb.Models.Entities.S_RSchema>, List<PhasePlayWeb.Models.Entities.SchemaAttributes>,string>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>PhasePlay.io</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link href="~/css/stylesheetphaseplay.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
         <h1>@Model.Item3</h1>
         <div class="card col-md-10 mx-auto" style="margin-top:20px;">           
            <div class="d-flex" style="padding:10px; margin-left:10px">
                <table id="myTable" class="display table table-bordertable-hover">
                    @foreach(var item in Model.Item1)
                    {
                
                        <thead>
                            <tr style="margin-top:10px; background-color:white;">
                                <th colspan="4">Week @item.SetWeek</th>
                            </tr>

                             <tr class="thead-light"style="margin-top:10px;">
                                <th>Reps</th>
                                <th>%1RM</th>
                                <th>RPE</th>
                               
                            </tr>
                        </thead>
               
               
                        var list = Model.Item2.Where(x => x.SchemaID == item.id);

                
                        <tbody>
                            @foreach (var item2 in list)
                            {
                                <tr data-id="@item2.id">
                                    <td>@item2.Reps</td>
                                    <td>@item2.PercentRM</td>
                                            <td step="0.1">@item2.RPE</td>
                                   
                                </tr>
                            }
                        </tbody>
                    }
                </table>
            </div>
         </div>
    </div>
</body>
</html>