@{
    Layout = null;
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RPE Data Upload</title>
    <style>
        /* Reset and base styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        body {
            background-color: #f5f7fa;
            color: #333;
            line-height: 1.6;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        /* Card container */
        .card {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            width: 100%;
            max-width: 500px;
            overflow: hidden;
            transition: transform 0.3s ease;
            margin: auto;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        /* Card header */
        .card-header {
            padding: 25px 30px;
            border-bottom: 1px solid #eaedf3;
            text-align: center;
        }

        .card-title {
            font-size: 24px;
            font-weight: 700;
            color: #1a202c;
            margin-bottom: 8px;
        }

        .card-description {
            color: #718096;
            font-size: 14px;
        }

        /* Card content */
        .card-content {
            padding: 30px;
        }

        /* Alert messages */
        .alert {
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
            display: none; /* Hidden by default */
        }

        .alert-success {
            background-color: #e6f7ef;
            border: 1px solid #c3e6cb;
            color: #155724;
        }

        .alert-danger {
            background-color: #fae7e7;
            border: 1px solid #f5c6cb;
            color: #721c24;
        }

        /* Show alert when it has the 'show' class */
        .alert.show {
            display: block;
        }

        /* Form styles */
        .form-group {
            margin-bottom: 25px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            font-size: 14px;
            color: #4a5568;
        }

        .file-upload-container {
            border: 2px dashed #cbd5e0;
            border-radius: 8px;
            padding: 30px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s ease;
            background-color: #f8fafc;
        }

            .file-upload-container:hover {
                border-color: #4299e1;
                background-color: #ebf8ff;
            }

        .file-upload-icon {
            font-size: 40px;
            color: #a0aec0;
            margin-bottom: 10px;
        }

        .file-upload-text {
            color: #718096;
            font-size: 14px;
            margin-bottom: 15px;
        }

        .file-input {
            display: block;
            width: 100%;
            padding: 10px;
            border: 1px solid #e2e8f0;
            border-radius: 6px;
            font-size: 14px;
            transition: border-color 0.3s ease;
        }

            .file-input:focus {
                outline: none;
                border-color: #4299e1;
                box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.15);
            }

        .btn {
            display: inline-block;
            font-weight: 600;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            user-select: none;
            border: 1px solid transparent;
            padding: 12px 20px;
            font-size: 14px;
            line-height: 1.5;
            border-radius: 6px;
            transition: all 0.3s ease;
            cursor: pointer;
            width: 100%;
        }

        .btn-primary {
            color: white;
            background-color: #4299e1;
            border-color: #4299e1;
        }

            .btn-primary:hover {
                background-color: #3182ce;
                border-color: #3182ce;
            }

            .btn-primary:focus {
                outline: none;
                box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.5);
            }

        /* Card footer */
        .card-footer {
            padding: 15px 30px;
            border-top: 1px solid #eaedf3;
            text-align: center;
        }

        .footer-text {
            color: #a0aec0;
            font-size: 12px;
        }

        /* File name display */
        .file-name {
            margin-top: 10px;
            font-size: 13px;
            color: #4a5568;
            word-break: break-all;
        }

    </style>
</head>
<body>
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">RPE Data Upload</h2>
            <p class="card-description">Upload your Excel file containing GPS data</p>
        </div>

        <div class="card-content">
            <!-- Success message (hidden by default) -->
            <div id="successAlert" class="alert alert-success" role="alert">
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <text>@successMessage</text>
                }
            </div>

            <!-- Error message (hidden by default) -->
            <div id="errorAlert" class="alert alert-danger" role="alert">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <text>@errorMessage</text>
                }
            </div>

            <form action="RPEDataUpload_POST" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="file">Choose CSV File</label>
                    <div class="file-upload-container" onclick="document.getElementById('file').click();">
                        <div class="file-upload-icon">📁</div>
                        <p class="file-upload-text">Drag and drop your file here or click to browse</p>
                        <input type="file" id="file" name="file" class="file-input" accept=".csv" onchange="updateFileName(this)" style="opacity: 0.01; position: absolute;" />
                        <div id="fileName" class="file-name"></div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Upload File</button>
            </form>
        </div>

        <div class="card-footer">
            <p class="footer-text">Supported formats: .csv</p>
        </div>
    </div>

    <script>
        // Simple script to show the selected file name
        function updateFileName(input) {
            const fileNameElement = document.getElementById('fileName');
            if (input.files && input.files[0]) {
                fileNameElement.textContent = 'Selected file: ' + input.files[0].name;
            } else {
                fileNameElement.textContent = '';
            }
        }

        // Show alerts based on TempData values
         window.onload = function() {
             const successMessage = '@successMessage';
             const errorMessage = '@errorMessage';

             if (successMessage) {
                 document.getElementById('successAlert').classList.add('show');
             }

             if (errorMessage) {
                 document.getElementById('errorAlert').classList.add('show');
             }
         }
    </script>
</body>
</html>