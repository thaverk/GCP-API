   @model PhasePlayWeb.Models.Entities.User

<div class="modal fade" id="bodyWeightModal" tabindex="-1" role="dialog" aria-labelledby="bodyWeightModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bodyWeightModalLabel">Enter Your Body Weight</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="bodyWeightForm">
                    <div class="form-group">
                        <label for="bodyWeight">Body Weight (kg)</label>
                        <input type="number" class="form-control" id="bodyWeight" name="BodyWeight" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveBodyWeight">Save changes</button>
            </div>
        </div>
    </div>
</div>
