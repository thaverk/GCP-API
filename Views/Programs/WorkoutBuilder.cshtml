<body>

    <div class="container">
     <header>
         
        </header>

        <div class="workout-builder">
            <div class="card col-md-10 mx-auto" style="padding:20px;">
                <div class="logo text-center">
                    <img src="https://phaseplay.io/wp-content/uploads/2020/09/site-logo.svg" alt="Company Logo">
                </div>

                <h1 class="text-center" style="font-family:HYGothic;font-weight:bold;">Workout Builder</h1>

                <form action="#" method="post">
                    <div class="form-group">
                        <label for="name">Workout Name:</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="weeks">Number of Weeks:</label>
                        <input type="number" class="form-control col-4" id="weeks" name="weeks" min="1" max="52" required >
                    </div>
                    <div class="button-group">
                        <button class="btn btn-primary" type="submit">Next</button>
                    </div>
                    <!-- Add more form fields as needed -->

                </form>
               
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
